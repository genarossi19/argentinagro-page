---
interface Props {
  img: string;
  text: string;
  href: string;
}
import "@/styles/global.css";
const { img, text, href } = Astro.props;
---

<a href={href} class="item"
  ><div class="rounded-lg w-[300px] flex flex-col gap-2">
    <div class="w-[300px] h-[300px] rounded-lg overflow-hidden">
      <source srcset="" type="image/webp" />
      <img src={img} class="object-center object-cover h-full w-full" />
    </div>
    <p class="text-gray-500 font-medium text-center">
      {text}
    </p>
  </div></a
>
