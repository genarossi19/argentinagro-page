---
// ServicesCard.astro
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  altText: string;
}

const { title, description, imageUrl, altText } = Astro.props;
---

<div
  class="bg-white rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
>
  <div class="relative">
    <img
      loading="lazy"
      transition:name=`img-${altText}`
      src={imageUrl || "/placeholder.svg"}
      alt={altText}
      class="w-full h-48 object-cover"
    />
    <div
      class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-40 flex items-center justify-center opacity-0 transition-opacity duration-300 hover:opacity-100"
    >
      <a href=`/servicios/${altText}` class="text-center"
        ><span class="text-white text-lg font-semibold">Ver detalles</span></a
      >
    </div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-2">{title}</h3>
    <p class="text-gray-600 text-sm mb-4">{description}</p>
    <a
      href="#"
      class="inline-block bg-logo-blue text-white py-2 px-4 rounded hover:bg-black transition-colors duration-300"
      >Cont√°ctanos</a
    >
  </div>
</div>
