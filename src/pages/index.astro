---
import Layout from "../layouts/Layout.astro";
import "@/styles/global.css";
import Section from "@/components/Sections/Section.astro";
import SectionHeader from "@/components/Sections/SectionHeader.astro";
---

<Layout title="Welcome to Astro.">
  <header
    class="mx-auto flex justify-between h-screen w-screen text-center snap-y snap-mandatory relative overflow-auto"
  >
    <div class="flex-1 z-10">
      <h1
        class="text-6xl font-semibold text-white items-center text-center text-balance mt-40"
      >
        La solucion ideal para <span class="text-logo-blue font-bold"
          >proteger</span
        >
        tus <span class="text-logo-blue font-bold"> cultivos</span>.
      </h1>

      <p class="text-2xl text-white text-center font-medium mt-6 ml-8">
        Desde 1976 al servicio de la agricultura regional.
      </p>
    </div>
    <div class="absolute top-0 bottom-0 h-full w-full">
      <video
        slot="background"
        muted
        src="video.webm"
        autoplay
        class="object-center object-cover h-full w-full"
        loop></video>
    </div>
  </header>
</Layout>

<Section
  color="white"
  title="Servicios"
  subtitle="Conoce nuestros servicios"
  id="servicios"
/>
<Section
  color="white"
  title="Servicios"
  subtitle="Conoce nuestros servicios"
  id="novedades"
/>
