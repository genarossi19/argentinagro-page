---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import { MessageCircle } from "lucide-react";
import "@/styles/global.css";
import { CarouselDemo } from "@/components/Carousel/CarouselDemo";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { SiembraAereaTabs } from "@/components/SiembraAereaTabs";

const images = [
  "/SiembraAerea1.jpg?height=300&width=300",
  "/SiembraAerea2.jpg?height=300&width=300",
  "/SiembraAerea3.jpg?height=300&width=300",
  "/SiembraAerea5.jpg?height=300&width=300",
  "/SiembraAerea6.jpg?height=300&width=300",
];

const title = "Siembra aérea";
---

<Layout title=`Servicios | ${title}`>
  <div class="h-[120px] header-blur w-full z-20 fixed top-0"></div>
  <section class="w-[95%] mx-auto mt-28 mb-28">
    <h1
      class="text-[40px] font-semibold text-center text-logo-blue underline"
      transition:name=`${title}-title`
    >
      {title}
    </h1>
    <div class="mt-10 w-full h-[300px]">
      <img
        transition:name="img-siembra_aerea"
        class="object-center object-cover h-full w-full rounded-md"
        src="/avion1.jpg"
        alt={title}
      />
    </div>

    <div
      transition:animate="fade"
      class="mt-10 flex flex-col md:flex-row gap-8 items-start"
    >
      <div class="w-full md:w-2/3 px-4">
        <Card
          className="border-0 shadow-sm bg-white/80 backdrop-blur-sm h-full"
        >
          <CardHeader className="pb-2">
            <div class="flex flex-col gap-2">
              <Badge
                variant="outline"
                className="w-fit text-logo-blue border-logo-blue/20 bg-logo-blue/5"
              >
                Servicio especializado
              </Badge>
              <CardTitle
                className="mt-6 text-4xl font-bold tracking-tight text-gray-900"
              >
                Pioneros en la zona con 20 años de experiencia
              </CardTitle>
              <CardDescription className="mt-6 text-xl text-gray-500">
                Ofrecemos soluciones aéreas de alta precisión para optimizar sus
                cultivos
              </CardDescription>
            </div>
          </CardHeader>
          <CardContent className="pt-6">
            <SiembraAereaTabs client:load />
          </CardContent>
          <CardFooter className="pt-4">
            <a
              target="_blank"
              href="https://api.whatsapp.com/send?phone=542392480555&text=%C2%A1Hola!%2C%20te%20hago%20una%20consulta."
              class="w-full sm:w-auto"
            >
              <Button
                className="w-full sm:w-auto bg-logo-blue hover:bg-logo-blue/90 text-white gap-2 group"
                size="lg"
              >
                <span>Saber más</span>
                <MessageCircle
                  size={18}
                  className="transition-transform group-hover:translate-x-1"
                />
              </Button>
            </a>
          </CardFooter>
        </Card>
      </div>
      <div class="w-full md:w-1/3 sticky top-32">
        <div class="rounded-lg overflow-hidden shadow-sm">
          <CarouselDemo client:load images={images} />
        </div>
      </div>
    </div>
  </section>
</Layout>
