---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import {
  MessageCircle,
  Tractor,
  Settings,
  Gauge,
  Leaf,
  Droplets,
} from "lucide-react";
import "@/styles/global.css";
import { CarouselDemo } from "@/components/Carousel/CarouselDemo";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { SiembraTerrestreEquipos } from "@/components/SiembraTerrestreEquipos";

const images = [
  "/SiembraTerrestre1.jpeg?height=300&width=300",
  "/SiembraTerrestre2.jpeg?height=300&width=300",
  "/SiembraTerrestre3.jpg?height=300&width=300",
  "/SiembraTerrestre4.jpg?height=300&width=300",
];

const title = "Siembra Terrestre";
---

<Layout title=`Servicios | ${title}` `>
  <div class="h-[120px] header-blur w-full z-20 fixed top-0"></div>
  <section class="w-[95%] mx-auto mt-28 mb-28">
    <h1
      class="text-[40px] font-semibold text-center text-logo-blue underline"
      transition:name=`${title}-title`
    >
      {title}
    </h1>
    <div class="mt-10 w-full h-[300px]">
      <img
        transition:name="img-siembra_terrestre"
        class="object-center object-cover h-full w-full rounded-md"
        src="/siembra_terrestre2.jpg"
        alt={title}
      />
    </div>
    <div
      transition:animate="fade"
      class="mt-10 flex flex-col md:flex-row gap-8 items-start"
    >
      <div class="w-full md:w-2/3 px-4">
        <Card
          className="border-0 shadow-sm bg-white/80 backdrop-blur-sm h-full"
        >
          <CardHeader className="pb-2">
            <div class="flex flex-col gap-4">
              <Badge
                variant="outline"
                className="w-fit px-4 py-1 text-sm tracking-wider text-logo-blue border-logo-blue/20 bg-logo-blue/5 rounded-full"
              >
                Equipamiento de precisión
              </Badge>
              <div class="space-y-2">
                <CardTitle
                  className="text-4xl font-bold tracking-wider text-gray-900"
                >
                  Contamos con 3 equipos de siembra de última tecnología
                </CardTitle>
                <CardDescription
                  className="text-xl tracking-wider text-gray-500"
                >
                  Nuestros equipos de siembra terrestre ofrecen la máxima
                  precisión y eficiencia
                </CardDescription>
              </div>
            </div>
          </CardHeader>
          <CardContent className="pt-8">
            <SiembraTerrestreEquipos client:load />
          </CardContent>
          <CardFooter className="pt-6">
            <a
              target="_blank"
              href="https://api.whatsapp.com/send?phone=542392480555&text=%C2%A1Hola!%2C%20te%20hago%20una%20consulta."
              class="w-full sm:w-auto"
            >
              <Button
                className="w-full sm:w-auto bg-black hover:bg-black/90 text-white gap-3 group px-6 py-6 text-base tracking-wider"
                size="lg"
              >
                <span>Saber más</span>
                <MessageCircle
                  size={20}
                  className="transition-transform group-hover:translate-x-1"
                />
              </Button>
            </a>
          </CardFooter>
        </Card>
      </div>
      <div class="w-full md:w-1/3 sticky top-32">
        <div class="rounded-lg overflow-hidden shadow-sm">
          <CarouselDemo client:load images={images} />
        </div>
      </div>
    </div>
  </section>
</Layout>
