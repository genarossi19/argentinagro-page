---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import {
  MessageCircle,
  Search,
  FileText,
  Leaf,
  Shield,
  TrendingUp,
  Clock,
} from "lucide-react";
import "@/styles/global.css";
import { CarouselDemo } from "@/components/Carousel/CarouselDemo";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";

const images = [
  "/SiembraTerrestre1.jpeg?height=300&width=300",
  "/SiembraTerrestre2.jpeg?height=300&width=300",
  "/SiembraTerrestre3.jpg?height=300&width=300",
  "/SiembraTerrestre4.jpg?height=300&width=300",
];

const title = "Monitoreo de Cultivos";

// Ventajas del monitoreo
const ventajas = [
  {
    titulo: "Ahorro de productos y menor impacto ambiental",
    descripcion:
      "Reducción en el uso de agroquímicos, beneficiando tanto a su economía como al medio ambiente.",
    icono: "Shield",
  },
  {
    titulo: "Aplicación precisa y efectiva",
    descripcion:
      "Uso del producto adecuado en la dosis efectiva para solucionar el problema específico.",
    icono: "Target",
  },
  {
    titulo: "Prevención de pérdidas",
    descripcion:
      "Evita mermas de rendimiento al detectar y tratar a tiempo cualquier infestación.",
    icono: "TrendingUp",
  },
  {
    titulo: "Mayor tiempo de gestión",
    descripcion:
      "Brinda mayor tiempo para la toma de decisiones y planificación a la empresa agrícola.",
    icono: "Clock",
  },
];
---

<Layout title=`Otros Servicios | ${title}` `>
  <div class="h-[120px] header-blur w-full z-20 fixed top-0"></div>
  <section class="w-[95%] mx-auto mt-28 mb-28">
    <h1
      class="text-[40px] font-semibold text-center text-logo-blue underline"
      transition:name=`${title}-title`
    >
      {title}
    </h1>
    <div class="mt-10 w-full h-[300px]">
      <img
        transition:name="img-monitoreo_cultivos"
        class="object-center object-cover h-full w-full rounded-md"
        src="/siembra_terrestre2.jpg"
        alt={title}
      />
    </div>
    <div
      transition:animate="fade"
      class="mt-10 flex flex-col md:flex-row gap-8 items-start"
    >
      <div class="w-full md:w-2/3 px-4">
        <Card
          className="border-0 shadow-sm bg-white/80 backdrop-blur-sm h-full"
        >
          <CardHeader className="pb-2">
            <div class="flex flex-col gap-4">
              <Badge
                variant="outline"
                className="w-fit px-4 py-1 text-sm tracking-wider text-logo-blue border-logo-blue/20 bg-logo-blue/5 rounded-full"
              >
                Servicio especializado
              </Badge>
              <div class="space-y-2">
                <CardTitle
                  className="text-4xl font-bold tracking-wider text-gray-900"
                >
                  Tarea que realizamos con Ingenieros Agrónomos y estudiantes
                  avanzados
                </CardTitle>
                <CardDescription
                  className="text-xl tracking-wider text-gray-500"
                >
                  Inspección profesional para optimizar el rendimiento y la
                  salud de sus cultivos
                </CardDescription>
              </div>
            </div>
          </CardHeader>

          <CardContent className="pt-8">
            <div class="space-y-8">
              <!-- Introducción al monitoreo -->
              <div
                class="bg-logo-blue/5 p-6 rounded-lg border border-logo-blue/20"
              >
                <div class="flex items-start gap-4">
                  <div
                    class="flex h-12 w-12 shrink-0 items-center justify-center rounded-full bg-logo-blue/10 text-logo-blue mt-1"
                  >
                    <Search className="h-6 w-6" />
                  </div>
                  <div>
                    <h3
                      class="text-xl font-semibold tracking-wider text-gray-900 mb-2"
                    >
                      Monitoreo de Plagas
                    </h3>
                    <p class="text-gray-600 tracking-wider leading-relaxed">
                      El Monitoreo de Plagas es una práctica que implica una
                      inspección frecuente y profesional de los lotes, evaluando
                      tipo y cantidad de organismos presentes, estimación de
                      daño y posible evolución en función de condiciones
                      ambientales y enemigos biológicos presentes en cada etapa
                      del cultivo.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Proceso de monitoreo -->
              <div class="p-6 rounded-lg border border-logo-blue/10">
                <div class="flex items-start gap-4 mb-4">
                  <div
                    class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-logo-blue/10 text-logo-blue"
                  >
                    <FileText className="h-5 w-5" />
                  </div>
                  <div>
                    <h3 class="font-semibold tracking-wider text-gray-900">
                      Informes detallados
                    </h3>
                    <p class="text-gray-600 tracking-wider mt-1">
                      Se realiza un informe semanal de lo observado en cada lote
                      con las sugerencias para realizar el control o cuidado
                      correspondiente y se envía por email.
                    </p>
                  </div>
                </div>
                <div class="flex items-start gap-4">
                  <div
                    class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-logo-blue/10 text-logo-blue"
                  >
                    <Leaf className="h-5 w-5" />
                  </div>
                  <div>
                    <h3 class="font-semibold tracking-wider text-gray-900">
                      Enfoque preventivo
                    </h3>
                    <p class="text-gray-600 tracking-wider mt-1">
                      Este método presenta ventajas comparativas con el sistema
                      tradicional de efectuar tratamientos preventivos o ante la
                      sola presencia de algún insecto.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Ventajas del monitoreo -->
              <div>
                <h3
                  class="text-xl font-semibold tracking-wider text-gray-900 mb-4"
                >
                  Ventajas del monitoreo profesional
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {
                    ventajas.map((ventaja) => (
                      <div class="flex items-start gap-4 p-4 rounded-lg border border-logo-blue/10 hover:bg-logo-blue/5 transition-colors">
                        <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-logo-blue/10 text-logo-blue">
                          {ventaja.icono === "Shield" && (
                            <Shield className="h-5 w-5" />
                          )}
                          {ventaja.icono === "Target" && (
                            <Search className="h-5 w-5" />
                          )}
                          {ventaja.icono === "TrendingUp" && (
                            <TrendingUp className="h-5 w-5" />
                          )}
                          {ventaja.icono === "Clock" && (
                            <Clock className="h-5 w-5" />
                          )}
                        </div>
                        <div>
                          <h4 class="font-semibold tracking-wider text-gray-900">
                            {ventaja.titulo}
                          </h4>
                          <p class="text-gray-600 tracking-wider text-sm mt-1">
                            {ventaja.descripcion}
                          </p>
                        </div>
                      </div>
                    ))
                  }
                </div>
              </div>

              <!-- Cita destacada -->
              <div
                class="mt-6 p-6 border-l-4 border-logo-blue bg-logo-blue/5 rounded-r-lg"
              >
                <p class="italic text-gray-600 tracking-wider">
                  "El monitoreo profesional de cultivos es una inversión que se
                  traduce en mayor rendimiento, menor uso de agroquímicos y
                  mejor planificación de recursos para su empresa agrícola."
                </p>
              </div>
            </div>
          </CardContent>

          <CardFooter className="pt-6">
            <a
              target="_blank"
              href="https://api.whatsapp.com/send?phone=542392480555&text=%C2%A1Hola!%2C%20te%20hago%20una%20consulta."
              class="w-full sm:w-auto"
            >
              <Button
                className="w-full sm:w-auto bg-black hover:bg-black/90 text-white gap-3 group px-6 py-6 text-base tracking-wider"
                size="lg"
              >
                <span>Saber más</span>
                <MessageCircle
                  size={20}
                  className="transition-transform group-hover:translate-x-1"
                />
              </Button>
            </a>
          </CardFooter>
        </Card>
      </div>
      <div class="w-full md:w-1/3 sticky top-32">
        <div class="rounded-lg overflow-hidden shadow-sm">
          <CarouselDemo client:load images={images} />
        </div>
      </div>
    </div>
  </section>
</Layout>
